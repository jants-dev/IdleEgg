            <if test="goodsImgs != null" >
            goods_imgs = #{goodsImgs},
            </if>
            <if test="isShow != null" >
            is_show = #{isShow},
            </if>
            <if test="sortOrder != null" >
            sort_order = #{sortOrder},
            </if>
            <if test="goodsType != null" >
            goods_type = #{goodsType},
            </if>
            <if test="createTime != null" >
