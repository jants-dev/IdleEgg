                #{goodsNum},
            </if>
            <if test="goodsWeight != null" >
                #{goodsWeight},
            </if>
            <if test="shopPrice != null" >
                #{shopPrice},
            </if>
            <if test="promotePrice != null" >
                #{promotePrice},
            </if>
            <if test="promoteStartDate != null" >
                #{promoteStartDate},
